usage() {
	echo 'usage: pbar [OPTION] [-t DEVICE] DONE TOTAL [TITLE] [DETAILS]...'
	echo
	echo '  -t    set the tty device'
	echo '  -n    outputs a new line at the end'
	echo '  -h    display this help and exit'
	exit
}

# This method is a fork from the packer method aurbar
progbar() {
	tty=$1
	done=$2
	total=$3
	title="$4"
	cutchars="$((${#2}+1+${#3}+1+${#4}))"
	misc="$5"

	# Delete line
	printf "\033[0G"

	# Get vars for output
	beginline=$title
	beginbar="["
	endbar="]"
	perc="$(($done*100/$total))"
	width="$(stty -F $tty size)"
	width="${width##* }"
	infolen="$(($width*6/10))"
	[ $infolen -lt 50 ] && infolen=50
	if [[ $infolen -lt $((${#beginline}+2+${#misc})) ]]; then
		beginline=${beginline::$((infolen-${#misc}-5))}
		beginline=$beginline"..."
	fi
	charsbefore="$((${#beginline}+1+${#misc}+1))"
	spaces="$(($infolen-$charsbefore))"
	barchars="$(($width-$infolen-${#beginbar}-${#endbar}-6))"
	hashes="$(($barchars*$perc/100))"
	dashes="$(($barchars-$hashes))"

	# Print output
	printf "$beginline %${spaces}s $misc ${beginbar}"

	for ((n=0; n<$hashes; n++)); do
		printf "#"
	done
	for ((n=0; n<$dashes; n++)); do
		printf "-"
	done
	printf "%s%4s%%\r" ${endbar} ${perc}
}

# Argument parsing

[[ $1 ]] || usage

while getopts ":nt:" optname; do
	case "$optname" in
		"t")
			tty=$OPTARG
			;;
		"n")
			newline=1
			;;
		"?")
			echo "Unknown option $OPTARG"
			usage
			;;
		":")
			echo "No argument value for option $OPTARG"
			;;
		*)
			echo "Unknown error while processing options"
			;;
		esac
done

done=${@:$OPTIND:1}
total=${@:$OPTIND+1:1}
title=${@:$OPTIND+2:1}
misc=${@:$OPTIND+3:1}

int='^[0-9]+$'

if [[ $tty == "" ]]; then
	tty=$(tty)
	if [[ $? -ne 0 ]]; then
		echo "Can't get tty device!"
		usage
	fi
fi

if [[ $done -gt $total ]]; then
	done=$total
fi

if [[ $done -eq "" ]]	|| [[ $total -eq "" ]] ||
	! [[ $done =~ $int ]] || ! [[ $total =~ $int ]]; then
	usage
fi

progbar $tty $done $total "$title" "$misc"

[ $newline ] && echo

exit
